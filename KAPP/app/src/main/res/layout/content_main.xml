<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bitcakecodes.kapp.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/firstimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ku"
        android:adjustViewBounds="true"
        />
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_height="1dp"
        android:background="@color/divider"/>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"

            >

            <ImageView
                android:id="@+id/imageinfo"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="16dp"
                android:src="@drawable/kulogo"
                android:adjustViewBounds="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/ku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:layout_toRightOf="@id/imageinfo"
                android:paddingTop="6dp"
                android:paddingLeft="16dp"
                android:textSize="17sp"
                android:typeface="sans"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="Kathmandu University"
                />
            <TextView
                android:id="@+id/po"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingLeft="16dp"
                android:layout_below="@id/ku"
                android:layout_toRightOf="@id/imageinfo"
                android:text="@string/po"/>
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingLeft="16dp"
                android:layout_below="@id/po"
                android:layout_toRightOf="@id/imageinfo"
                android:text="@string/location"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:paddingTop="6dp"
                android:paddingLeft="16dp"
                android:layout_below="@id/location"
                android:layout_toRightOf="@id/imageinfo"

                android:text="ESTD: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/estd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/date"
                android:layout_below="@id/location"

                android:paddingTop="6dp"
                android:paddingBottom="6dp"

                android:text="@string/estd"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:paddingLeft="16dp"
            android:textColor="@color/secondary_text"
            android:text="Vision Statement :  "
            android:textAllCaps="true"/>


        <TextView
            android:id="@+id/vision"
            android:layout_marginBottom="6dp"
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:textColor="@color/secondary_text"
            android:text="@string/vision"
            android:textStyle="italic"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:paddingLeft="16dp"
            android:textColor="@color/secondary_text"
            android:text="Top Destinations : "
            android:textAllCaps="true"/>




        <Button
            android:id="@+id/one"
            style="@style/Buttons"
            android:text="Main Square"
            />

        <Button
            android:id="@+id/two"
            style="@style/Buttons"
            android:text="Central Office"
            />
        <Button
            android:id="@+id/three"
            style="@style/Buttons"
            android:text="Library"
            />
        <Button
            android:id="@+id/four"
            style="@style/Buttons"
            android:text="CV Raman Auditorium"
            />
        <Button
            android:id="@+id/fourteen"
            style="@style/Buttons"
            android:text="DOCSE"/>
        <Button
            android:id="@+id/five"
            style="@style/Buttons"
            android:text="KU Canteen"
            />
        <Button
            android:id="@+id/six"
            style="@style/Buttons"
            android:text="School of Science"


            />
        <Button
            android:id="@+id/seven"
            style="@style/Buttons"

            android:text="Biotechnology Block"


            />
        <Button
            android:id="@+id/eight"
            style="@style/Buttons"
            android:text="School of engineering"


            />
        <Button
            android:id="@+id/nine"
            style="@style/Buttons"
            android:text="New DOCSE"


            />
        <Button
            android:id="@+id/ten"
            style="@style/Buttons"

            android:text="Lecture Hall"


            />
        <Button
            android:id="@+id/eleven"
            style="@style/Buttons"

            android:text="Civil and geomatics"


            />
        <Button
            android:id="@+id/twelve"
            style="@style/Buttons"
            android:text="Department of Pharmacy"/>





        <View
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_height="1dp"
            android:background="@color/divider"/>


    </LinearLayout>
</ScrollView>

</LinearLayout>
